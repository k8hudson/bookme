  <section id="content">
    <div class="main padder">
      <div class="row">
        <div class="col-lg-4 col-lg-offset-4 m-t-large">
          <section class="panel">
            <header class="panel-heading text-center">
              Ingresa
            </header>
            <div class="panel-body">
              <%= form_for @user, url: login_path do |f| %>
                <%= f.error_messages %>
                <div class="block">
                <label>Email</label>
                <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
                </div>
                <div class="block">
                <label>Contraseña</label>
                <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Contraseña' %>
                </div>
                <div class="checkbox">
                <label>
                  <input type="checkbox"> Mantenerme conectado
                </label>
                </div>
                <a href="#" class="pull-right m-t-mini"><small>¿Olvidaste tu contraseña?</small></a>
                <%= f.submit "Ingresa", class: "btn btn-primary" %>

                <% end %>
              <div class="line line-dashed"></div>
              <a href="#" class="btn btn-facebook btn-block m-b-small"><span class="glyphicon glyphicon-facebook pull-left"></span>Ingresa con Facebook</a>
              <div class="line line-dashed"></div>
              <p class="text-muted text-center"><small>¿No tienes una cuenta aún?</small></p>
              <a href="signup.html" class="btn btn-white btn-block">Crea una cuenta</a>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
  <!-- footer -->
  <footer id="footer">
    <div class="text-center padder clearfix">
      <p>
        <small>&copy; SAM 2013. Todos los derechos reservados</small><br><br>
      </p>
    </div>
  </footer>